<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BiblioExe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BiblioExe.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="background-color: #ddd; font-size: 18px">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BiblioExe</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Catalogo">Catalogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" target="_blank" href="https://view.genially.com/6667f6edff4c40001433c0b3/presentation-pa-biblioexe">Presentacion</a>
                        </li>
                        @if (User.Identity is not null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("1"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Alumno" asp-action="Panel">Informacion Personal</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Alumno" asp-action="SolicitudesAlumno">Prestamos</a>
                                </li>
                            }
                            @if (User.IsInRole("2"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Alumno" asp-action="Panel">Informacion Personal</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Alumno" asp-action="Solicitudes">Prestamos</a>
                                </li>
                            }
                            @if (User.IsInRole("3"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="CatalogoAdmin">Inventario</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="NuevoAdmin">Nuevo Administrador</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="Solicitudes">Solicitudes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="Prestamos">Prestamos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="Reportes">Reportes</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="Alumnos">Alumnos</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="Estadisticas">Estadisticas</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Logout">Cerrar Sesion</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Login">Iniciar Sesion</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="margin: 0; padding: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div class="container-fluid bg-light contafooter text-white mt-5 pt-5 px-0 position-absolute">
		    <div class="row mx-0 pt-5 px-sm-5 px-lg-5 mt-0">
			    <div class="col-lg-3 col-md-6 mb-5">
				    <h4 class="text-dark text-uppercase mb-4" style="letter-spacing: 3px;">BIBLIO<b class="text-danger">EXE</b></h4>
				    <p class="text-danger"><i class="mr-2 text-dark"></i>Excelente Servicio</p>
				    <p class="m-0"><i class="fa fa-envelope mr-2"></i>info@example.com</p>
			    </div>
			    
			    <div class="col-lg-3 col-md-6 mb-5">
				    <h4 class="text-dark text-uppercase mb-4" style="letter-spacing: 3px;">Conocenos</h4>
				    <div style="display: flex; flex-direction: column;">
					    <a class="text-danger text-uppercase pb-1" asp-controller="Home" asp-action="AcercaDe" style="text-decoration: none;">Acerca de</a>
					    <a class="text-danger text-uppercase pb-1" asp-controller="Home" asp-action="Privacidad" style="text-decoration: none;">Avisos de Privacidad</a>
					    <a class="text-danger text-uppercase" asp-controller="Home" asp-action="TerminosYCondiciones" style="text-decoration: none;">Términos y Condiciones</a>
				    </div>
			    </div>
			    <div class="col-lg-3 col-md-6 mb-0">
				    <h4 class="text-dark text-uppercase mb-4" style="letter-spacing: 3px;">Contactanos</h4>
				    <p class="text-dark">biblioexe@gmail.com</p>
				   
			    </div>
		    </div>
	    </div>
    </div>
</body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>
