@model List<BiblioExe.Models.Libro>

@{
    ViewData["Title"] = "Catalogo";
}

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="shortcut icon" href="/Users/itscovart/Desktop/FUCKING TITULO/Vistas/Icons/Lapiz.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
  <style>
    h4{
      font-weight: 200;
      font-family: Tahoma;
      padding: 5px;
      color: #fff;
    }
    img{
      box-shadow: 10px 10px 80px rgb(0,0,0);
    }
    body{
        background-color: #900C3F;
    }
  </style>
</head>
<body>
    @if(ViewBag.Error == true)
    {
        <script>
            alert("Favor de llenar todos los campos");
        </script>
    }

  <div class="container-fluid text-center mt-5 p-5">
    <div class="row" id="Contenedor">
        @{
            var id = 1;
        }
        @foreach (var Libro in Model)
            {
             <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 col-xxl-3" id="@id">
                <a href="/Usuarios/Libro?id=@Libro.IDLibro"  style="text-decoration: none; color: #000;" >
                <img src="~/Images/Catalogo/@Libro.Imagen" class="w-50" style="box-sizing: border-box; margin: 15px; border-radius: 5px;">
                <h4>@Libro.Autor</h4>
                <h4>@Libro.Nombre</h4>
                <h4>@Libro.Editorial</h4>
                </a>
            </div>
            id++;
            }
        </div>
  </div>
</body>
</html>