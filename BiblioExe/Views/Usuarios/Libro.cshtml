 @{
    var id = Context.Request.Query["id"];
    ViewData["Title"] = "Informacion del Libro";
 }

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div
      class="container-fluid text-center pt-5 m-0"
      style="background-color: #900C3F; padding: 20px; font-family: Tahoma; align-items: center !important; padding: 0; color: #fefefe" >
      <div class="row">
        <div class="col-12 d-flex justify-content-start">
          <a class="btn btn-dark btn-lg" style="border-radius: 15px; margin-left: 3%;" asp-action="Catalogo">Volver</a>
        </div>
      </div>
      <div class="row">
        <div
          class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6"
        >
          <img
            src="~/Images/Catalogo/@ViewBag.Imagen"
            alt=""
            style="box-sizing: border-box; padding: 80px; margin: auto !important; width: 60%; height: 100%; border-radius: 15px;" />
        </div>
        <div
          class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6" style="margin: auto;">
          <h5 style="margin-bottom: 20px !important;">
            @ViewBag.Autor
          </h5>
          <h2 style="margin: 20px !important;">
            @ViewBag.Nombre
          </h2>
          <h5 style="margin: 20px !important;">
            @ViewBag.Editorial
          </h5>
          <br>
          <a
            id="btnPrestamo"
            href="/Alumno/Prestamo?id=@id"
            type="_blank"
            style="
              text-decoration: none;
              color: #fefefe;
              padding: 15px;
              background-color: #000;
              border-radius: 30px;              
              text-align: start;
              margin-bottom: 30px !important;">
              Pedir Prestamo</a>
        </div>
      </div>
      <div class="row" style="margin-top: 40px; margin-bottom: 0;">
        <div class="col-12" style="padding: 0% 15%;">
          <h4
          style="justify-content:start ;">
          Sinopsis
          </h4>
          <p style="text-align: justify">@ViewBag.Sinopsis</p>
        </div>
      </div>
    </div>
  </body>
</html>
