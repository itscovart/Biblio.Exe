@{
    ViewData["Title"] = "Datos Personales";
}   

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <style>
        body {
            background-image: url("D:\FUCKING TITULO\BiblioExe\BiblioExe\wwwroot\Images\Paneles\Fondo.jpeg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
</head>
<body style="background-color: #900C3F">
    <div class="container text-center" style="padding: 80px 0px; box-shadow: 10px 10px 100px rgb(0, 0, 0); border-radius: 60px; margin-top: 80px; margin-bottom: 80px; background-color: #eee;">
        <h2>Datos Generales</h2>
        <div class="row">
            <div class="col-12">
                <div class="input-group mt-3 mb-3" style="width: 50%; margin: auto;">
                    <span class="input-group-text" id="inputGroup-sizing-default">Boleta</span>
                    <input type="text" class="form-control" placeholder="Boleta" aria-label="Boleta" aria-describedby="button-addon1" id="NoEditables" value="@ViewBag.Boleta" required disabled>
                </div>
            </div>                
        </div>
        <div class="row">
            <div class="col-12">
                <div class="input-group mt-3 mb-3" style="width: 50%; margin: auto;">
                    <span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
                    <input type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="button-addon1" id="NoEditables" value="@ViewBag.Nombre" required disabled>
                </div>
            </div>                
        </div>
        <div class="row">
            <div class="col-12">
                <div class="input-group mt-3 mb-3" style="width: 50%; margin: auto;">
                    <span class="input-group-text" id="inputGroup-sizing-default">Correo</span>
                    <input type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="button-addon1" value="@ViewBag.Email" id="Correo" required disabled>
                </div>
            </div>                
        </div>
        <div class="row">
            <div class="col-12">
                <div class="input-group mt-3 mb-3" style="width: 50%; margin: auto;">
                    <span class="input-group-text" id="inputGroup-sizing-default">Semestre</span>
                    <input type="text" class="form-control" placeholder="Semestre" aria-label="Semestre" aria-describedby="button-addon1" id="NoEditables" value="@ViewBag.Semestre" required disabled>
                </div>
            </div>                
        </div>
        <div class="row">
            <div class="col-12">
                <div class="input-group mt-3 mb-3" style="width: 50%; margin: auto;">
                    <span class="input-group-text" id="inputGroup-sizing-default">Carrera</span>
                    <input type="text" class="form-control" placeholder="Carrera" aria-label="Carrera" aria-describedby="button-addon1" id="NoEditables" value="@ViewBag.Carrera" required disabled>
                </div>
            </div>                
        </div>
        <div class="row">
            <div class="col-12">
                <div class="input-group mt-3 mb-3" style="width: 50%; margin: auto;">
                    <span class="input-group-text" id="inputGroup-sizing-default">Grupo</span>
                    <input type="text" class="form-control" placeholder="Grupo" aria-label="Grupo" aria-describedby="button-addon1" id="NoEditables" value="@ViewBag.Grupo" required disabled>
                </div>
            </div>                
        </div>
    </div>
</body>
