@{
    ViewData["Title"] = "Prestamos";
    var id = Context.Request.Query["id"];
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>

  <link href="~/css/bootstrap5/css/bootstrap-datetimepicker.css" rel="stylesheet" />
  <style>
    .w-75{
      border-radius: 15px;
    }
    .w-100{
      border-radius: 6px;
    }
    .w-50{
      border-radius: 25px;
    }
    input, section, select {
      padding: 10px;
      background-color: #ddd;
    }
  </style>
</head>
<body style="background-color: #900C3F;">
    <form asp-action="SolicitarPrestamo" method="post">
<input type="hidden" name="IDLibro" value="@id" />
  <div class="container-fluid text-center mt-5 w-75" style="background-color: #fff;">
    <div class="row p-4">
        <div class="col-12 d-flex justify-content-start">
            <a class="btn btn-dark btn-lg" style="border-radius: 15px;" href="/Usuarios/Libro?id=@id">Volver</a>
        </div>
    </div>
    <div class="row p-4">
      <div class="col-12">
        <input type="text" name="Nombre" class="textInput w-100" value="@ViewBag.Nombre" required disabled>
      </div>
    </div>
    <div class="row p-4">
      <div class="col-12">
        <input type="text" name="Autor" class="textInput w-100" value="@ViewBag.Autor" required disabled>
      </div>
    </div>
    <div class="row p-4">
      <div class="col-12">
        <input type="text" name="Editorial" class="textInput w-100" value="@ViewBag.Editorial" required disabled>
      </div>
    </div>
    <div class="row pt-0 p-4">
      <div class="col-12 col-md-6 pt-4">
        <select name="Materia" class="w-100" id="cbMateria">
          <option value="0">Selecciona una Materia</option>
          @foreach(var Materia in ViewBag.Materias)
          {
            <option value="@Materia.IDMateria">@Materia.Nombre</option>
          }
        </select>
      </div>
      <div class="col-12 col-md-6 pt-4">
        <select name="Profesor" class="w-100" id="cbProfesor">
          <option value="0">Selecciona al Profesor</option>
          @foreach(var Profesor in ViewBag.Profesores)
          {
                <option value="@Profesor.IDProfesor">@Profesor.ApellidoP @Profesor.ApellidoM @Profesor.Nombre </option>                                
          }
        </select>
      </div>
    </div>
    <div class="row pt-0 p-4">
      <div class="col-12 col-lg-6">
        <h4 class="p-4">Fecha de Inicio</h4>
        <input type="date" name="FechaInicio" class="w-100" id="FechaInicio" min="2024-06-15" required>
      </div>
      <div class="col-12 col-lg-6">
        <h4 class="p-4">Fecha Final</h4>
        <input type="date" name="FechaFinal" class="w-100" id="FechaFinal" min="2024-06-17" required>
      </div>
    </div>
    <div class="row p-4">
      <div class="col-12 col-lg-6">
        <div class="input-group mb-3">
          <span class="input-group-text" id="inputGroup-sizing-default">Cantidad</span>
          <input name="Cantidad" type="number" class="form-control" max="@ViewBag.existencia" min="0" id="Cantidad" required placeholder="Disponibles: @ViewBag.existencia">
        </div>
      </div>
      <div class="col-12 col-lg-6">
        <input type="submit" value="Pedir Prestamo" class="btn btn-dark btn-lg w-75" onclick="ValidarCampos()">
      </div>
    </div>  
   </div>

</form>
<script src="~/lib/jquery/dist/jquery.js" />
<script src="~/css/bootstrap5/js/bootstrap-datetimepicker.min.js" type="text/javascript"/>
